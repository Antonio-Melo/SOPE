#include <stdio.h>


#define BUF_LENGTH 512


int main(int argc,char *argv[]){
 FILE *src, *dst;
 char buf [BUF_LENGHT];

 if(argc != 3){
 printf("Usage: %s <source> <destination>\n",argv[0]);
 return 1;
 }

 src = fopen(argv[1],"r");
 if(src == NULL){
 printf("File %s does not exist",argv[1]);
 return -1;		
 }

 dst = fopen(argv[1],"w");
 if(dst == NULL){
 printf("File %s does not exist",argv[2]);
 }
 


}
