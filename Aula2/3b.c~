#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>
#include <errno.h>

int main(int argc, char *argv[])
{
int fd1, fd2;

if (argc != 3) {
 printf("Usage: %s <source> <destination>\n", argv[0]);
 return 1;
 }
 fd1 = open(argv[1], O_RDONLY);
if (fd1 == -1) {
 perror(argv[1]);
 return 2;
 }
 fd2 = open(argv[2], O_WRONLY | O_CREAT | O_EXCL, 0644);
 if (fd2 == -1) {
 perror(argv[2]);
 close(fd1);
return 3;
}

 dup2(fd1,fd2);

 close(fd1);
 close(fd2);
 return 0;
} 
